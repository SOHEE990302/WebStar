@page
@model WebStar.Pages.AIModel
@{
    ViewData["Title"] = "AI";
}

<h1>Ask AI</h1>
<form method="post">
    <label for="question">Enter your question:</label>
    <input type="text" id="question" name="UserQuestion" style="width: 100%;" required />
    <button type="submit" class="btn btn-primary mt-2">Ask AI</button>
</form>

@if (Model.AIResponse != null)
{
    <h2>AI Response</h2>
    <p><strong>Question:</strong> @Model.UserQuestion</p>
    <p><strong>Response:</strong> @Model.AIResponse</p>
}
